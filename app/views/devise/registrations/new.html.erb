<main class="container general-main-wrap">
  <div class="text-center">
    <h3 class="general-login-title">
      Registration
    </h3>
  </div>
  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'general-form' } do |f| %>
    <div class="form-group mb-30">
      <%= f.label :email, "e-mail", class: 'control-label input-label email-label' %>
      <%= f.input_field :email, autofocus: true, autocomplete: "email", id: 'email', class: 'form-control', placeholder: "E-Mail" %>
      <%= f.full_error :email, class: 'text-danger' %>
    </div>
    <div class="form-group mb-30">
      <%= f.label :password, "password", class: 'control-label input-label password-label' %>
      <%= f.input_field :password, autocomplete: "new-password", id: 'password', class: 'form-control', placeholder: "Password" %>
      <%= f.full_error :password, class: 'text-danger' %>
    </div>
    <div class="text-center">
      <%= f.submit "Register", class: 'btn btn-default mb-20 submit-btn' %>
    </div>
  <% end %>
  <p class="general-sign-text text-center">
    <%= link_to "Log In", new_user_session_path, class: 'log-in-link' %>
  </p>
</main>
