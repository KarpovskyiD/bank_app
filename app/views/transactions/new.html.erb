<main class="container general-main-wrap">
  <div class="text-center">
    <h3 class="general-login-title">
      <%= t 'transactions.new.new_transaction' %>
    </h3>
  </div>

  <%= simple_form_for :transaction , url: transactions_path, method: "POST", html: { class: 'general-form' } do |f| %>
    <div class="form-group mb-30">
      <%= f.label :email, t('transactions.new.email'), class: 'control-label input-label email-label' %>
      <%= f.input_field :email, autofocus: true, autocomplete: t('transactions.new.email'), id: 'email', class: 'form-control', placeholder: "E-Mail" %>
      <%= f.full_error :email, class: 'text-danger' %>
    </div>
    <div class="form-group mb-30">
      <%= f.label :amount, t('transactions.new.amount'), class: 'control-label input-label password-label' %>
      <%= f.input_field :amount, autocomplete: "t('transactions.new.amount')", id: 'amount', class: 'form-control', placeholder: "Amount" %>
      <%= f.full_error :password, class: 'text-danger' %>
    </div>
    <div class="text-center">
      <%= f.submit t('transactions.new.create_transaction'), class: 'btn btn-default mb-20 submit-btn' %>
    </div>
  <% end %>
</main>
